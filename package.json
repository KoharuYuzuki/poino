{
  "name": "poino",
  "version": "1.1.1",
  "description": "Speech synthesis software without voice actors",
  "author": "KoharuYuzuki",
  "main": "build/ts/main.js",
  "scripts": {
    "start": "npx electron .",
    "dev": "npm start -- --DEBUG",
    "build": "npm run ts:build && npm run renderer:build",
    "watch": "npm run ts:watch & npm run renderer:watch",
    "ts:build": "npx tsc",
    "ts:watch": "npm run ts:build -- --watch",
    "renderer:build": "npm run build --prefix renderer",
    "renderer:watch": "npm run watch --prefix renderer"
  },
  "devDependencies": {
    "electron": "^21.3.1",
    "electron-builder": "^23.6.0",
    "typescript": "^4.9.3"
  },
  "build": {
    "appId": "KoharuYuzuki25.poino",
    "productName": "poino",
    "copyright": "Copyright (c) 2022 KoharuYuzuki25",
    "asar": true,
    "files": [
      "./build/openjtalk/*",
      "./build/ts/*",
      "./openjtalk/hts_voice_nitech_jp_atr503_m001-1.05/*",
      "./openjtalk/open_jtalk_dic_utf_8-1.11/*",
      "./renderer/dist/*",
      "./renderer/dist/assets/*",
      "./voices/*",
      "./licenses.json"
    ],
    "mac": {
      "icon": "./build/icon.icns",
      "artifactName": "${productName}-${os}-${arch}.zip",
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "electronLanguages": [
        "ja"
      ]
    },
    "win": {
      "icon": "./build/icon.ico",
      "artifactName": "${productName}-${os}-${arch}.zip",
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    }
  }
}
